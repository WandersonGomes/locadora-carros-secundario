<!-- Menu de opções -->
{{> menu}}

<!--Cadastro de Clientes-->
<div class="container">
  <h1 class="text-center">Dados do Cliente</h1><br>
  <form class="g-3" action="#">
    <div class="row">
      <div class="form-group col-lg-6 col-md-12 mb-2">
        <label for="name">Nome</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Nome" value="{{customer.name}}" disabled>
      </div>
      <div class="form-group col-lg-6 col-md-12 mb-2">
        <label for="lastname">Sobrenome</label>
        <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Sobrenome" value="{{customer.lastName}}" disabled>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-lg-6 col-md-12 mb-2">
        <label for="cpf">CPF:</label>
        <input type="text" class="form-control" id="cpf" name="cpf" placeholder="Informe o CPF" value="{{customer.cpf}}" disabled>
      </div>
      <div class="form-froup col-lg-6 col-md-12 mb-2">
        <label for="rg">RG</label>
        <input type="text" class="form-control" id="rg" name="rg" placeholder="Informe o RG" value="{{customer.rg}}" disabled>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group col-lg-6 col-md-12 mb-2">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{customer.email}}" disabled>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12 col-lg-6 mb-2">
        <label for="address">Endereço</label>
        <input type="text" class="form-control" id="address" name="address" placeholder="Rua dos Bobos, nº 0" value="{{customer.address}}" disabled>
      </div>
      <div class="form-group col-md-12 col-lg-6 mb-2">
        <label for="complement">Complemento</label>
        <input type="text" class="form-control" id="complement" name="complement" placeholder="Apartamento, hotel, casa, etc." value="{{customer.complement}}" disabled>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-12 col-lg-6 mb-2">
        <label for="city">Cidade</label>
        <input type="text" class="form-control" id="city" name="city" value="{{customer.city}}" disabled>
      </div>
      <div class="form-group col-md-12 col-lg-4 mb-2">
        <label for="state">Estado</label>
        <select id="state" name="state" class="form-control"disabled>
          <option value="" disabled selected>{{customer.state}}</option>
        </select>
      </div>
      <div class="form-group col-md-2 mb-2">
        <label for="cep">CEP</label>
        <input type="text" class="form-control" id="cep" name="cep" value="{{customer.cep}}" disabled>
      </div>
    </div>
    <a href="/admin/customers/" class="btn btn-success mb-2">Voltar</a>
  </form>
</div>