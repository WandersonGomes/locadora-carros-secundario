<div class="card m-2" style="width: 18rem;">
  <img src="/images/image-car.png" class="card-img-top" alt="Imagem do carro">
  <div class="card-body">
    <h5 class="card-title">{{model}}</h5>
    <p class="card-text">Preço da diária: R$ {{priceDaily}}</p>
    <p class="card-text">Status: {{status}}</p>
    <p class="card-text">Tipo de Combustível: {{fuel}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <a href="/admin/cars/edit/{{id}}" class="card-link text-warning cursor-pointer">Atualizar</a>
    </li>
    <li class="list-group-item">
      <a class="card-link text-danger btn-delete-car cursor-pointer" href="#" data-idcar="{{id}}">Deletar</a>
    </li>
    <li class="list-group-item">
      <a href="/admin/cars/details/{{id}}" class="card-link text-primary cursor-pointer">Detalhes</a>
    </li>
  </ul>
</div>