<!-- Menu de opções -->
{{> menu}}

<!--Cadastro de veículos-->
<div class="container pb-3">
    <h1 class="text-center">Detalhes do Veículo</h1><br>
    {{#with car}}
    <form class="g-3" action="#">

        <div class="row">

            <div class="form-group col-lg-3">
                <label for="placa">Placa do Veículo</label>
                <input type="text" class="form-control" value="{{plate}}" disabled >
            </div>

            <div class="form-group col-lg-3">
                <label for="modelo">Marca/Modelo/Versão</label>
                <input type="text" class="form-control" value="{{model}}" disabled>
            </div>

            <div class="form-group col-lg-3">
                <label for="ano">Ano</label>
                <input type="text" class="form-control" value="{{year}}" disabled>
            </div>

            <div class="form-group col-lg-3">
                <label for="ano-modelo">Ano Modelo</label>
                <input type="text" class="form-control" value="{{yearModel}}" disabled>
            </div>

        </div>

        <div class="row">

            <div class="form-group col-lg-3">
                <label for="exercicio">Execício Licenciamento</label>
                <input type="text" class="form-control" value="{{licensing}}" disabled>
            </div>

            <div class="form-group col-lg-3">
                <label for="cor">Cor</label>
                <input type="text" class="form-control" value="{{color}}" disabled>
            </div>

            <div class="form-group col-md-3">
                <label for="renavan">Renavan</label>
                <input type="text" class="form-control" value="{{renavan}}" disabled>
            </div>

            <div class="form-group col-md-3">
                <label for="chassi">Chassi</label>
                <input type="text" class="form-control"  value="{{chassi}}" disabled>
            </div>

        </div>

        <div class="row">

            <div class="form-group col-md-3">
                <label for="motor">Motor</label>
                <input type="text" class="form-control" value="{{motor}}" disabled>
            </div>

            <div class="form-group col-md-3">
                <label for="crv">Número do CRV</label>
                <input type="text" class="form-control" value="{{crv}}" disabled>
            </div>
            <div class="form-group col-md-3">
                <label for="cla">Código de segurança do CLA</label>
                <input type="text" class="form-control" value="{{codeCLA}}" disabled>
            </div>
            <div class="form-group col-md-3">
                <label for="combustivel">Combustível</label>
                <input type="text" class="form-control" value="{{fuel}}" disabled>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-3">
                <label for="categoria">Categoria</label>
                <input type="text" class="form-control" value="{{nameOwner}}" disabled>
            </div>
            <div class="form-group col-md-3">
                <label for="cpf-proprietario">CPF/CNPJ Proprietário</label>
                <input type="text" class="form-control" value="{{cpfOwner}}" disabled>
            </div>
            <div class="form-group col-md-9">
                <label for="nome-proprietario">Nome do Proprietário</label>
                <input type="text" class="form-control" value="{{nameOwner}}" disabled>
            </div>
            <div class="form-group col-md-3">
                <label for="local">Local</label>
                <input type="text" class="form-control" value="{{city}}" disabled>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-9">
                <label for="opcionais">Opcionais</label>
                <input type="text" class="form-control" value="{{opcionais}}" disabled>
            </div>
            <div class="form-group col-md-3">
                <label for="lotacao">Lotação</label>
                <input type="text" class="form-control" value="{{lotacao}}" disabled>
            </div>
        </div>
        
        <a href="/admin/cars/" class="btn btn-success mb-2">Voltar</a>
    </form>
    {{/with}}
</div>